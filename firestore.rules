rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les coffres (vaults)
    match /vaults/{vaultId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Règles pour les profils utilisateur
    match /userProfiles/{userId} {
      // L'utilisateur peut lire et écrire son propre profil
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validation des données lors de l'écriture
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['userId', 'createdAt', 'updatedAt'])
        && request.resource.data.userId == userId;
        
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.createdAt == resource.data.createdAt; // Ne pas modifier createdAt
    }
    
    // Règles pour les transactions
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Règles pour les autres collections existantes
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
